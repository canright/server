<!doctype html>
<html><head>
  <meta charset="utf-8">
  <title>{{metaTitle}}</title>
  <!-- client-side.hog -->

{{#site.styles}}
<link href="{{css}}" rel="stylesheet" type="text/css">
{{/site.styles}}

{{#site.libraries}}
<script src="{{src}}"></script>
{{/site.libraries}}

</head><body>
  <div id="blog">
    <header>
      <a href="/">
        <b>{{site.firstName}}</b>
        <img id="logo" src="{{site.logo.src}}" alt="{{site.logo.alt}}">
      </a>
      <h2>{{titleA}}<br>{{titleB}}</h2>
    </header>
    <nav>
      <ul>
{{#menu.list}}
        <li><a href="{{href}}">{{label}}</a></li>
{{/menu.list}}
      </ul>
    </nav>

    <div id="core">
      <article>

        <div id="overview" class="markdown">
{{text}}
        </div>

        <h3>{{portfolioWebsites.title}}</h3>
        <ul>
{{#portfolioWebsites.list}}
          <li><a href="{{href}}" target="_blank">{{label}}</a> - {{location}}</li>
{{/portfolioWebsites.list}}
        </ul>

      </article>
    </div>

    <footer>
      <ul>
{{#site.footer}}
        <li><a href="{{href}}">{{label}}</a></li>
{{/site.footer}}
      </ul>
    </footer>
  </div>
</body></html>
