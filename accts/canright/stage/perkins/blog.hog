<!doctype html>
<html><head>
  <meta charset="utf-8">
  <title>{{metaTitle}}</title>
  <!-- {{site.name}} -->
  <!-- perkins/blog.hog -->
  
  {{#site.styles}}
<link href="{{css}}" rel="stylesheet" type="text/css">
{{/site.styles}}

{{#site.libraries}}
<script src="{{src}}"></script>
{{/site.libraries}}
{{#section.libraries}}
<script src="{{src}}" type="{{type}}"></script>
{{/section.libraries}}

</head><body>
  <div id='blog'>

    <header>
      <a href="/">
        <img id="logo" src="{{site.logo.src}}" alt="{{site.logo.alt}}">
      </a>
      <h2>{{title}}</h2>
    </header>

    <nav>
      <ul>
{{#menu.list}}
        <li><a href="{{href}}">{{label}}</a></li>
{{/menu.list}}
      </ul>
    </nav>

    <div id="core">
      <article id="work" class="markdown">
      </article>
    </div>

    <footer>
      <ul>
{{#site.footer}}
        <li><a href="{{href}}">{{label}}</a></li>
{{/site.footer}}
      </ul>
    </footer>
  </div>
</body></html>