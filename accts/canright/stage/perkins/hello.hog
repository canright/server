<!doctype html>
<html><head>
  <meta charset="utf-8">
  <title>{{metaTitle}}</title>
  <!-- {{site.name}} -->
  <!-- perkins/hello.hog -->

  {{#site.styles}}
  <link href="{{css}}" rel="stylesheet" type="text/css">
  {{/site.styles}}


  {{#section.libraries}}
  <script src="{{src}}"></script>
  {{/section.libraries}}

  <script type="text/babel">
    ReactDOM.render(<h1>hello!</h1>, document.getElementById('work'));
  </script>

</head><body>
  <div id="blog">
    <header>
      <a href="/">
        <img id="logo" src="{{site.logo.src}}" alt="{{site.logo.alt}}">
      </a>
      <h2>{{title}}</h2>
    </header>
    <nav>
      <ul>
{{#menu.list}}
        <li><a href="{{href}}">{{label}}</a></li>
{{/menu.list}}
      </ul>
    </nav>

    <div id="core">
      <article id="work"></article>
    </div>

    <footer>
      <ul>
{{#site.footer}}
        <li><a href="{{href}}">{{label}}</a></li>
{{/site.footer}}
      </ul>
    </footer>
  </div>
</body></html>
